@model _2001216311_VuThiHuyenVi_DoAn.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        color: #ffd800;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #495057;
    }

    input {
        width: 100%;
        padding: 12px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
        background-color: #f8f9fa;
        color: #495057;
        margin-bottom: 10px;
    }

    button {
        background-color: #ffd800;
        color: #000000;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>
<div class="container">
    <h2>Thông tin thêm sản phẩm</h2>

    <form action="/Admin/AdminTaiKhoan/Edit/@Model.UserId" method="post">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <div class="form-group">
            <label for="UserName">Tên tài khoản</label>
            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Tên tài khoản" value="@Model.UserName" />
        </div>

        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Mật khẩu" value="@Model.Password" />
        </div>

        <div class="form-group">
            <label for="EmailAddress">EmailAddress</label>
            <input type="email" class="form-control" id="EmailAddress" name="EmailAddress" placeholder="EmailAddress" value="@Model.EmailAddress" />
        </div>

        <div class="form-group">
            <label for="Role">Phân quyền</label>
            <input type="text" class="form-control" id="Role" name="Role" placeholder="Phân quyền" value="@Model.Role" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <button class="btn btn-primary"><a href="/Admin/AdminTaiKhoan/Index">Thoát</a></button>
        </div>
    </form>
</div>

