@model _2001216311_VuThiHuyenVi_DoAn.Models.SanPhamm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        color: #ffd800;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #495057;
    }

    input {
        width: 100%;
        padding: 12px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
        background-color: #f8f9fa;
        color: #495057;
        margin-bottom: 10px;
    }

    button {
        background-color: #ffd800;
        color: #000000;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>
<div class="container">
    <h2>Thông tin thêm sản phẩm</h2>

    <form action="/Admin/AdminSanPham/Edit/@Model.IdSP" method="post" enctype="multipart/form-data">
        <input type="hidden" name="IdSP" value="@Model.IdSP"/>
        <div class="form-group">
            <label for="NameSP">Tên sản phẩm</label>
            <input type="text" class="form-control" id="NameSP" name="NameSP" placeholder="Tên sản phẩm" value="@Model.NameSP"/>
        </div>

        <div class="form-group">
            <label for="Loai">Loại</label>
            <input type="text" class="form-control" id="Loai" name="Loai" placeholder="Loại" value="@Model.Loai"/>
        </div>

        <div class="form-group">
            <label for="GiaCu">Giá</label>
            <input type="text" class="form-control" id="GiaCu" name="GiaCu" placeholder="Giá" value="@Model.GiaCu"/>
        </div>

        <div class="form-group">
            <label for="GiaMoi">Giá khuyến mãi</label>
            <input type="text" class="form-control" id="GiaMoi" name="GiaMoi" placeholder="Giá khuyến mãi" value="@Model.GiaMoi"/>
        </div>

        <div class="form-group">
            <label for="IdTH">Thương hiệu</label>
            <input type="text" class="form-control" id="IdTH" name="IdTH" placeholder="Thương hiệu" value="@Model.IdTH"/>
        </div>
        <div class="form-group">
            <label for="HinhAnh">Hình ảnh</label>
            <input type="file" class="form-control-file" id="HinhAnh" name="HinhAnh" value="@Model.HinhAnh"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <button class="btn btn-primary"><a href="/Admin/AdminSanPham/Index">Thoát</a></button>
        </div>
    </form>
</div>